# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Windows 스타일 줄바꿈 설정
[*]
charset = utf-8
end_of_line = crlf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown 파일은 trailing whitespace가 의미가 있을 수 있음
[*.md]
trim_trailing_whitespace = false

# Makefile은 탭을 사용해야 함
[Makefile]
indent_style = tab 